{
  "private": true,
  "name": "{{ name }}",
  "version": "{{ version }}",
  "<Settings>": "------------------------------ Foundation Settings ------------------------------",
  "babel": {
    "presets": [
      "env",
      "jest",
      "react"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-decorators-legacy",
      "transform-runtime",
      ["module-resolver", {
        "root": ["./src"],
        "alias": {
          "tests": "./tests"
        }
      }]
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "env": {
      "jest/globals": true
    },
    "extends": [
      "standard",
      "standard-react"
    ],
    "plugins": [
      "html",
      "jest"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,css,less,scss}": [
      "prettier-standard",
      "git add"
    ]
  },
  "jest": {
    "rootDir": ".",
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "globals": {
      "__DEV__": true
    },
    "collectCoverageFrom": [
      "!tests/bootstrap.js",
      "src/**/*.{js,jsx}"
    ],
    "setupTestFrameworkScriptFile": "./tests/bootstrap.js",
    "testMatch": [
      "<rootDir>/tests/**/?(*.)(spec|test).{js,jsx}"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "</Settings>": "------------------------ End of Foundation Settings ------------------------------",
  "scripts": {
    "precommit": "lint-staged",
    "prebuild": "npm run clean",
    "build": "react-app-rewired build",
    "clean": "rimraf build",
    "lint": "eslint --ext .jsx,.js src tests",
    "start": "per-env",
    "start:development": "react-app-rewired start",
    "prestart:production": "npm run build",
    "start:production": "node build/index.js",
    "test": "react-app-rewired test --coverage --env=jsdom",
    "test:development": "cross-env TIMEOUT=10000 jest --forceExit"
  }
}
