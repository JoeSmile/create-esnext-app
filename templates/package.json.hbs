{
  "private": true,
  "name": "{{ project }}",
  "version": "{{ version }}",
  "scripts": {
    "precommit": "lint-staged",
    "start": "cross-env NODE_ENV=development babel-node src/index.js"
  },
  "babel": {
    "presets": ["env", "jest"],
    "plugins": [
      "transform-class-properties",
      "transform-decorators-legacy",
      ["module-resolver", {
        "root": ["./src"],
        "alias": {
          "tests": "./tests"
        }
      }]
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,css,less,scss}": [
      "prettier-standard",
      "git add"
    ]
  },
  "jest": {
    "rootDir": ".",
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "globals": {
      "__DEV__": true
    },
    "setupTestFrameworkScriptFile": "./tests/bootstrap.js",
    "testRegex": "./tests/.*.spec.jsx?$"
  }
}
