{
  "private": true,
  "name": "{{ project }}",
  "version": "{{ version }}",
  "scripts": {
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": [
     "standard",
     "standard-react"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,css,less,scss}": [
      "prettier-standard",
      "git add"
    ]
  },
  "jest": {
    "rootDir": ".",
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "globals": {
      "__DEV__": true
    },
    "setupTestFrameworkScriptFile": "./tests/bootstrap.js",
    "testRegex": "./tests/.*.spec.jsx?$"
  }
}