{
  "name": "create-esnext-app",
  "version": "0.1.1",
  "description": "Create ESNext apps with no build configuration.",
  "main": "lib/index.js",
  "bin": "index.js",
  "<Settings>": "------------------------------ Foundation Settings ------------------------------",
  "babel": {
    "presets": [
      "env",
      "jest"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-decorators-legacy",
      "transform-runtime",
      [
        "module-resolver",
        {
          "root": [
            "./lib"
          ],
          "alias": {
            "tests": "./tests"
          }
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "env": {
      "jest/globals": true
    },
    "extends": "standard",
    "plugins": [
      "jest"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,css,less,scss}": [
      "prettier-standard",
      "git add"
    ]
  },
  "</Settings>": "------------------------ End of Foundation Settings ------------------------------",
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "eslint --ext .js lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jimzhan/create-esnext-app.git"
  },
  "keywords": [
    "zero-configuration",
    "build-tools",
    "babel",
    "esnext",
    "es2015",
    "es2016",
    "es2017"
  ],
  "author": "Jim Zhan <jim.zhan@me.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jimzhan/create-esnext-app/issues"
  },
  "homepage": "https://github.com/jimzhan/create-esnext-app#readme",
  "dependencies": {
    "chalk": "^2.3.0",
    "cross-spawn": "^5.1.0",
    "handlebars": "^4.0.11",
    "husky": "^0.14.3",
    "inquirer": "^4.0.1",
    "lint-staged": "^6.0.0",
    "mkdirp": "^0.5.1",
    "recursive-copy": "^2.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.5",
    "@commitlint/config-conventional": "^5.2.3",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.13.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.4.2",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.2.1",
    "prettier-standard": "^7.0.3",
    "semantic-release": "^8.2.0"
  }
}
